{
  "expo": {
    "name": "PotteryDiary",
    "owner": "potterydiary",
    "slug": "pottery-diary",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.potterydiary.potterydiary",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Pottery Diary to use the camera to take photos",
        "NSPhotoLibraryAddUsageDescription": "Allow Pottery Diary to save photos",
        "NSPhotoLibraryUsageDescription": "Allow Pottery Diary to include photos from your Camera Roll"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.potterydiary.potterydiary",
      "permissions": [
        "CAMERA",
        "MANAGE_DOCUMENTS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "sentry-expo",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow PotteryDiary to access your photos",
          "cameraPermission": "Allow PotteryDiary to access your camera"
        }
      ]
    ],
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "potterydiary",
            "project": "pottery-diary"
          }
        }
      ]
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/820b16f0-09d8-4e3f-a616-9091f304831b"
    }
  }
}
